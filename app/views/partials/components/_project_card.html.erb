<div class="card shadow-lg mb-3">
<%= image_tag("card-img-top.jpg", class: "card-img-top shadow-lg") %>
  <div class="card-body shadow-lg mt-n5 p-4 bg-white">
    <h5 class="card-title mb-4 fs-2 fw-normal text-dark">Titre d'un projet</h5>
    <p class="card-text mb-4 fs-6 fw-light text-dark">
      Lorem ipsum dolor sit amet, consectetur adipiscing elit.
      Dictum ullamcorper vel dolor tellus varius.
      Venenatis blandit diam mauris mauris urna duis.
    </p>
    <div class="progress-container mb-5">
      <p><%= t(".amount_collected") %><span> 1M €</span></p>
      <div class="progress">
        <div class="progress-bar"
            role="progressbar"
            style="width: 100%;"
            aria-valuenow="100"
            aria-valuemin="0"
            aria-valuemax="100">
          <small>100%</small>
        </div>
      </div>
    </div>
    <div class="d-flex justify-content-around">
      <section class="d-flex flex-column">
        <small class="text-muted fw-light"><%= t(".sector_of_activity") %></small>
        <small class="text-muted fw-bold">Foodtech</small>
      </section>
      <div class="border border-1"></div>
      <section class="d-flex flex-column">
        <small class="text-muted fw-light"><%= t(".sales_of_the_last_twelve_months") %></small>
        <small class="text-muted fw-bold">1 000 000 €</small>
      </section>
    </div>
  </div>
  <div class="card-footer d-flex justify-content-center p-3 shadow">
    <%= image_tag("check", class: "me-2 svg", width: "1.875rem") %>
    <span><%= t(".funded") %></span>
  </div>
</div>
