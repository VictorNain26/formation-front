<header class="sticky-top bg-white border-bottom">
  <nav class="navbar navbar-expand-lg navbar-white">
    <div class="container-fluid justify-content-between p-0">
      <div class="navbar-brand m-0 text-center">
        <%= link_to root_path do %>
          <%= image_tag("logo", width: "12rem", class: "svg") %>
        <% end %>
      </div>
      <button
        class="navbar-toggler justify-content-center border border-secondary"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarToggler"
        aria-controls="navbarToggler"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse container" id="navbarToggler">
        <%= render 'partials/navbar/navs' %>
        <%= render 'partials/navbar/mobile_navs' %>
      </div>
    </div>
  </nav>
</header>
